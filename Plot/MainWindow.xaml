<Window x:Class="Plot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Plot"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <WpfPlot Name="plt" Margin="10,20,200,10" />
        <Button x:Name="btm1" Content="Sin Y*X" HorizontalAlignment="Left" Margin="623,20,0,0" VerticalAlignment="Top" Height="55" Width="140" Click="btm1_Click"/>
        <Button x:Name="btm2" Content="Cos Y*X" HorizontalAlignment="Left" Margin="623,106,0,0" VerticalAlignment="Top" Height="55" Width="140" Click="btm2_Click"/>
        <TextBox x:Name="textBox1" TextAlignment ="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="623,20,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140" Height="55" Visibility="Hidden" KeyDown="textBox1_KeyDown"/>
        <TextBox x:Name="textBox2" TextAlignment ="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="623,20,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140" Height="55" Visibility="Hidden" KeyDown="textBox2_KeyDown"/>
    </Grid>
</Window>
